{
  "extends": "eslint:recommended",
  "parserOptions": { 
    "ecmaVersion": 2017, 
    "sourceType": "module" 
  },
  "env": { 
    "es6": true, 
    "node": true, 
    "mocha": true 
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "prefer-const": ["error", {
      "destructuring": "any",
      "ignoreReadBeforeAssign": false
    }],
    "no-var": ["error"]
  }
}